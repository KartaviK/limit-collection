{
    "name": "kartavik/limit-collection",
    "description": "Base collection with limit size option",
    "type": "library",
    "require": {
        "wearesho-team/base-collection": "^1.0",
        "php": ">=7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "KartaviK",
            "email": "varkuta.roma@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Kartavik\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kartavik\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 ./src ./tests",
        "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
        "cover": "phpunit --coverage-clover=coverage.xml",
        "test": "phpunit"
    }
}
